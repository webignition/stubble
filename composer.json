{
    "name": "webignition/stubble",
    "description": "A minimal library to replace mustache-like variables in strings",
    "keywords": ["mustache", "handlebars", "string", "replace", "replacement"],
    "homepage": "https://github.com/webignition/stubble",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\Stubble\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\Stubble\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer check --allow-risky=yes --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": "^8.4",
        "webignition/stubble-resolvable": ">=0.24,<1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.91",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
